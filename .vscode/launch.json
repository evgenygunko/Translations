{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "coreclr",
            "request": "launch",
            "name": "Launch TranslatorApp",
            "program": "${workspaceFolder}/source/TranslatorApp/bin/Debug/net10.0/TranslatorApp.dll",
            "args": [],
            "cwd": "${workspaceFolder}/source/TranslatorApp",
            "stopAtEntry": false,
            "preLaunchTask": "build",
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "launchBrowser": {
                "enabled": true,
                "args": "${auto-detect-url}"
            }
        }
    ]
  }
